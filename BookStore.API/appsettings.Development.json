{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": 
  {
    "Postgres" : "Server=localhost;Port=5430;Database=BookStoreDb;User Id=admin;Password=root;"

  },

  "Serilog": 
  {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": 
    {
      "Default": "Debug",
      "Override": 
        {
          "Microsoft" : "Warning",
          "System" :  "Warning"
        }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level:u3}] {Message}{NewLine}{Exception}"
        }
      }
    ]
  }


}
